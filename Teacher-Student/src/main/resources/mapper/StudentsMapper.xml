<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxy.dao.StudentsMapper">
	<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！ -->
	<resultMap id="BaseResultMap" type="com.zxy.domain.Students">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="student_name" property="studentName" jdbcType="VARCHAR" />
		<result column="teacher_id" property="teacherId" jdbcType="INTEGER" />
		<result column="grade" property="grade" jdbcType="VARCHAR" />
		<result column="is_exist" property="isExist" jdbcType="INTEGER" />
		<result column="come_date" property="comeDate" jdbcType="VARCHAR" />
		<result column="out_date" property="outDate" jdbcType="VARCHAR" />
	</resultMap>
	<!-- 查询单条记录 -->
	<select id="selectAllStudent" resultMap="BaseResultMap">
		SELECT ts.* ,GROUP_CONCAT(work_content) work_content from t_students ts 
		LEFT JOIN t_school_work tsw on tsw.student_id=ts.id
		and tsw.work_status=0 GROUP BY ts.id
	</select>
	
	<insert id="addNewStudent" parameterType="com.zxy.domain.Students">
		insert into t_students (student_name,grade,teacher_id,create_date) 
			VALUES (#{studentName},#{grade},#{teacher_id},NOW())
	</insert>
	
	<update id="updateStudent" parameterType="com.zxy.domain.Students">
		update t_students set create_date=create_date 
		<if test="studentName != null">
			, student_name=#{studentName}
		</if>
		<if test="grade != null">
			, grade=#{grade}
		</if>
		<if test="teacher_id != null">
			, teacher_id=#{teacherId}
		</if>
		where id=1
	</update>
	
	
	
	
	
</mapper>