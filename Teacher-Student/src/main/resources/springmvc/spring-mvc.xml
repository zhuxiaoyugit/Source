<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.2.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<mvc:annotation-driven />
	<!-- 扫描controller（controller层注入） -->
	<context:component-scan base-package="com.zxy.controller" />

	<mvc:annotation-driven />
	<!-- 静态资源访问 -->
	<mvc:resources mapping="assets/**" location="/WEB-INF/assets/" />
	<mvc:resources mapping="lib/**" location="/WEB-INF/lib/" />
	<mvc:resources mapping="static/**" location="/WEB-INF/static/" />
	<mvc:resources mapping="temp/**" location="/WEB-INF/temp/" />
	<mvc:resources mapping="js/**" location="/WEB-INF/js/" />
	<!--从根目录开始找资源 -->
	<!-- <mvc:resources location="/" mapping="/**/*.js"/> <mvc:resources location="/" 
		mapping="/**/*.css"/> -->
	<mvc:default-servlet-handler />
	<!-- 对模型视图添加前后缀 -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		p:prefix="/WEB-INF/view/" p:suffix=".jsp" />
</beans>